<p id="notice"><%= notice %></p>

<dashboard>
  <div class="row">
    <div class="col-sm-2">
      <left-menu>
        <ul class="categories list-group">
          <% if user_signed_in? %>
              <li class="list-group-item">
                <a href="/tickets">Tickets</a>
              </li>
          <% end %>
          <li class="list-group-item">
            <a href="/events">Events</a>
          </li>
        </ul>
      </left-menu>
    </div>
    <div class="col-sm-10">
      <list-of-products>
        <div class="panel panel-default">
          <div class="panel-heading">Tickets</div>
          <div class="panel-body">
            <table class="table table-hover">
              <thead>
              <tr>
                <th>Name</th>
                <th>Seat id seq</th>
                <th>Address</th>
                <th>Price</th>
                <th>Email address</th>
                <th>Phone</th>
                <th>event_id</th>
                <th>user_id</th>
                <th colspan="3"></th>
              </tr>
              </thead>

              <tbody>
              <% @tickets.each do |ticket| %>
                  <tr>
                    <td><%= ticket.name %></td>
                    <td><%= ticket.seat_id_seq %></td>
                    <td><%= ticket.address %></td>
                    <td><%= ticket.price %></td>
                    <td><%= ticket.email_address %></td>
                    <td><%= ticket.phone %></td>
                    <td><%= ticket.event_id %></td>
                    <td><%= ticket.user_id %></td>
                    <td><%= link_to 'Show', ticket %></td>
                    <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
                    <td><%= link_to 'Destroy', ticket, method: :delete, data: {confirm: 'Are you sure?'} %></td>
                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>

        <%= link_to 'New Ticket', new_ticket_path %>
      </list-of-products>
    </div>
  </div>
</dashboard>
